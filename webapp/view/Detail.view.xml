<mvc:View
	controllerName="opensap.salesOrderViewer.SalesOrderViewer.controller.Detail"
	xmlns="sap.m"
	xmlns:semantic="sap.f.semantic"
	xmlns:l="sap.ui.layout"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	>

	<semantic:SemanticPage
		id="detailPage"
		busy="{detailView>/busy}"
		busyIndicatorDelay="{detailView>/delay}">
		<semantic:titleHeading>
			<Title
				text="{CompanyName}"
				level="H2"/>
		</semantic:titleHeading>
		<semantic:headerContent>
				<Button text="Client details"
						tooltip="Client details"
						press="onPress">
				</Button>
			<Panel id="companyInfo" expandable="true" >
				<content>
					<Label 
					text="{i18n>detailViewPartnerInfo}"
					design="Bold"
					/>
					<l:Grid
					binding="{/PersonCollection}"
					class="sapUiSmallMarginTop"
					hSpacing="2"
					defaultSpan="L6 M6 S10">
						<l:content>
						<VBox>
							<Text text="{i18n>detailsStreet}" />
							<Text text="{0/Description}" />
						</VBox>
						<VBox>
							<Text text="{i18n>detailsPostalCode}" />
							<Text text="{1/Description}" />
						</VBox>
				
						<VBox>
							<Text text="{i18n>detailsCity}" />
							<Text text="{2/Description}" />
						</VBox>
						
						<VBox>
							<Text text="{i18n>detailsCountry}"/>
							<Text text="add binding"/>
						</VBox>
					</l:content>
					</l:Grid>
				</content>
			</Panel>
		</semantic:headerContent>
		<semantic:content>
			
			<Table
				id="lineItemsList"
				width="auto"
				items="{ToSalesOrders}"
				updateFinished=".onListUpdateFinished"
				noDataText="{i18n>detailLineItemTableNoDataText}"
				busyIndicatorDelay="{detailView>/lineItemTableDelay}">
				<headerToolbar>
					<Toolbar>
						<Title
							id="lineItemsTitle"
							text="{detailView>/lineItemListTitle}"
							titleStyle="H3"
							level="H3"/>
					</Toolbar>
				</headerToolbar>
				<columns>
					<Column id= "orderNumber">
						<Label labelFor="myColumn"
							    design="Bold"
							    text="{i18n>detailOrderNumber}"
							    wrapping="true"
						/>
					</Column>
					<Column id ="grossAmount">
						<Label labelFor="grossAmount"
							    design="Bold"
							    text="{i18n>detailGrossAmount}"
							    wrapping="true"
						/>
					</Column>
					<Column id = "netAmount">
						<Label labelFor="netAmount"
							    design="Bold"
							    text="{i18n>detailNetAmount}"
							    wrapping="true"
						/>
					</Column>
					<Column id = "taxAmount">
						<Label labelFor="taxAmount"
							    design="Bold"
							    text="{i18n>detailTaxAmount}"
							    wrapping="true"
						/>
					</Column>
					<Column id = "detailCurrency" minScreenWidth="Tablet">
						<Label labelFor="grossAmount"
							    design="Bold"
							    text="{i18n>detailCurrency}"
							    wrapping="true"
						/>
					</Column>
				</columns>
				<items>
					<ColumnListItem>
						<cells>
							<ObjectIdentifier
							title="{
								path : 'SalesOrderID', 
								type : 'sap.ui.model.odata.type.String', 
								constraints: { 
								isDigitSequence : true
									    }
									}"
								/>
							<ObjectNumber number="{
							path: 'GrossAmount',
							formatter: '.formatter.dotToComaChanger'
								}"
							state="{
							path: 'GrossAmount',
							formatter: '.formatter.grossAmountChecker'
								}"	
								/>
							<ObjectNumber number="{
							path: 'NetAmount',
							formatter: '.formatter.dotToComaChanger'
								}"
								/>
							<ObjectNumber number="{
							path: 'TaxAmount',
							formatter: '.formatter.dotToComaChanger'
								}"
								/>
							<Text text="{
								path: 'CurrencyCode'
								}"
							/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</semantic:content>
		<!--Semantic ShareMenu Buttons-->
		<semantic:sendEmailAction>
			<semantic:SendEmailAction
				id="shareEmail"
				press=".onSendEmailPress"/>
		</semantic:sendEmailAction>

		<semantic:closeAction>
			<semantic:CloseAction
					id="closeColumn"
					press=".onCloseDetailPress"/>
		</semantic:closeAction>

		<semantic:fullScreenAction>
			<semantic:FullScreenAction
					id="enterFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; !${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:fullScreenAction>
		<semantic:exitFullScreenAction>
			<semantic:ExitFullScreenAction
					id="exitFullScreen"
					visible="{= !${device>/system/phone} &amp;&amp; ${appView>/actionButtonsInfo/midColumn/fullScreen}}"
					press=".toggleFullScreen"/>
		</semantic:exitFullScreenAction>

	</semantic:SemanticPage>

</mvc:View>