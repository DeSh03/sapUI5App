<mvc:View height="100%" controllerName="opensap.salesOrderViewer.SalesOrderViewer.controller.OrderDescription" xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m">
	<Page showNavButton="true" navButtonPress="onNavBack" id="idPage" title="{i18n>ordersRecords}">
		<!-- this CSS class add a standard spacing to all the page content -->
		<content>
			<ObjectHeader></ObjectHeader>
			<Table noDataText="{i18n>thereAreNoOrders}" id="idProductsTable" inset="false" class="sapFSemanticPageAlignContent" width="auto">
				<columns>
					<Column>
						<Label design="Bold" text="{i18n>orderNumber}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label design="Bold" text="{i18n>gross}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="false">
						<Label design="Bold" text="{i18n>net}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="false">
						<Label design="Bold" text="{i18n>tax}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label design="Bold" text="{i18n>currency}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells >
							<Text text="{ path: 'SalesOrderID', formatter: '.formatter.removeZerros' }"/>
							<ObjectStatus state="{= ${GrossAmount} > 10000 ? 'Error' : 'None'}"
								text="{path: 'GrossAmount', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}}"/>
							<Text text="{path: 'NetAmount', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}}"/>
							<Text text="{path: 'TaxAmount', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}}"/>
							<Text text="{CurrencyCode}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
			<Table headerText="{i18n>ordersRecords}" noDataText="There Are No Orders" items="{path:'ToLineItems'}" id="idProductsItemsTable"
				inset="false" class="sapFSemanticPageAlignContent" width="auto">
				<columns>
					<Column>
						<Label design="Bold" text="{i18n>position}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label design="Bold" text="{i18n>product}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label design="Bold" text="{i18n>gross}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="false">
						<Label design="Bold" text="{i18n>net}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="false">
						<Label design="Bold" text="{i18n>tax}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label design="Bold" text="{i18n>currency}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="false">
						<Label design="Bold" text="{i18n>deliveryDate}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label design="Bold" text="{i18n>amount}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Label design="Bold" text="{i18n>unit}"/>
					</Column>
				</columns>
				<items>
					<ColumnListItem vAlign="Middle">
						<cells >
							<Text text="{ path: 'ItemPosition', formatter: '.formatter.removeZerros' }"/>
							<Text text="{path: 'ProductID'}"/>
							<ObjectStatus state="{= ${GrossAmount} > 10000 ? 'Error' : 'None'}"
								text="{path: 'GrossAmount', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}}"/>
							<Text text="{path: 'NetAmount', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}}"/>
							<Text text="{path: 'TaxAmount', type: 'sap.ui.model.type.Float', formatOptions: {minFractionDigits: 2}}"/>
							<Text text="{CurrencyCode}"/>
							<Text text="{path: 'DeliveryDate', type: 'sap.ui.model.type.Date', formatOptions: {pattern: 'yyyy.MM.dd'}}"/>
							<Text text="{Quantity}"/>
							<Text text="{QuantityUnit}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Page>
</mvc:View>